<div class="tags">
	<h4 class="tags__header">Tags</h4>
	<ul class="tags__list">
		{{#foreach posts}}
		  {{#foreach tags}}
		    <li class="tag__item">
		    	 <a href="/tag/{{slug}}" class="tag__link">
		    		<i class="fa fa-tag">
		      		<span class="tag__text">{{name}}</span>
		      	</i>
		      </a>
		    </li>
		  {{/foreach}}
		{{/foreach}}
	</ul>
</div>